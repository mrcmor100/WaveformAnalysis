{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c", 
                "module use /group/halla/modulefiles && module load cmake && cmake -S ${workspaceFolder} -B ${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c", 
                "cmake --build ${workspaceFolder}/build"
            ],
            "dependsOn": "CMake Configure",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
